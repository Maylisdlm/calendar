
<div class="container mt-5">

  <div class="row">

    <div class="col-7">
    <div class="card">
      <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
        <h2>Réservation</h2>
        <%= simple_form_for :search, method: "get" do |f| %>
          <%= f.input :city, collection: ['Tokyo', 'Kyoto', 'Osaka', 'Nara'], include_blank: false %>
          <%= f.input :number, collection: 1..5 %>
          <%= f.input :price, collection: ['Journée 8h (160€)', 'Demi-Journée 4h (100€)'], include_blank: false %>
           <div class="card mt-4 mb-4">
              <p>Periode</p>
              <div class="d-flex">
                <%= f.input :date_beginning, as: :string, required: false, input_html: {class: "datepicker"} %>
                <%= f.input :date_end, as: :string, required: false, input_html: {class: "datepicker"} %>
              </div>
              <p>Jour</p>
                <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker"} %>
           </div>

          <%= f.button :submit, "Ajouter à votre Réservation", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
    </div>

    <div class="col-5">
      <div class="card justify-content-between align-items-center">
